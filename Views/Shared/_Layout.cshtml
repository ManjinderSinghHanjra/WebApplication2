@{
    var user = (WebApplication2.Models.UserModel)Session["User"];
}

@if (user == null || user.Auth == false)
{
    Response.Redirect(Url.Action("LoginDetails", "Login", null));
}
else
{

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title -Intellect Corporations LLC</title>
        @Styles.Render("~/Content/bootstrap.min.css")
        @Scripts.Render("~/Scripts/jquery.min.js")
        @Scripts.Render("~/Scripts/bootstrap.min.js")
        @Scripts.Render("~/Scripts/UserDefined/home.js")
        @Styles.Render("~/Content/UserDefined/home.css")
    </head>
    <body>
        <header>
            @Html.Partial("_Header")
        </header>
         <div>
            @RenderBody()
            <hr />
            <footer class="text-center">
                <p>&copy; <a href="#">Intellect Corporations LLC. &#x24B8 All rights reserved.</a></p>
            </footer>
        </div>

   
        @RenderSection("scripts", required: false)
    </body>
    </html>
}
